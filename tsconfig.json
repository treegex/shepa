{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "types": ["node"],
    "module": "es2020",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "outDir": "./dist",
    "sourceMap": true,
    "stripInternal": true,
    "strict": true,
    "target": "es6"
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules"
  ]
}